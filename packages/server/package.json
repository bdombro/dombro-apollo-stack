{
 "name": "@dombro/apollo-server",
 "version": "1.0.0",
 "description": "Apollo Server Template",
 "main": "./dist",
 "engineStrict": true,
 "engines:": {
  "node": ">=12.0.0"
 },
 "config": {
  "prettier": "**/*.{js,json,css,jsx,mjs,ts,tsx,yaml,yml,graphql}",
  "babel_extensions": ".js,.ts",
  "babel_ignore": "**/__tests__,**/*.test.ts,**/*.spec.ts"
 },
 "scripts": {
  "build": "babel src --out-dir dist --ignore \"$npm_package_config_babel_ignore\" --copy-files --no-copy-ignored --extensions \"$npm_package_config_babel_extensions\" --source-maps inline",
  "clean": "rimraf reports dist",
  "clean:cache": "rimraf .cache",
  "codegen": "gql-gen --config src/graphql/schema/codegen.yaml",
  "lint": "eslint . --ext .js,.ts --format ./eslint-formatter.js -o reports/eslint/results.xml",
  "format": "npm run lint --fix",
  "posttest": "npm run types:check && npm run lint && npm run format:check",
  "prebuild": "npm run clean",
  "start": "NODE_ENV=${NODE_ENV:-development} nodemon",
  "test": "CI=true jest --coverage --verbose --colors",
  "test:watch": "jest --watch"
 },
 "lint-staged": {
  "**/*.{js,ts}": [
   "eslint . --fix --ext .js,.ts"
  ],
  "**/*.{js,json,css,jsx,mjs,md,ts,tsx,yaml,yml,gql,graphql}": [
   "prettier --write \"$npm_package_config_prettier\""
  ]
 },
 "dependencies": {
  "@apollographql/graphql-playground-html": "^1.6.24",
  "@hapi/accept": "^4.0.0",
  "apollo-datasource": "^0.7.0",
  "apollo-server-errors": "^2.4.1",
  "apollo-server-express": "^2.12.0",
  "body-parser": "^1.19.0",
  "deepmerge": "^4.2.2",
  "express": "^4.17.1",
  "express-jwt": "^5.3.3",
  "glob": "^7.1.6",
  "graphql": "^14.6.0",
  "graphql-extensions": "^0.11.1",
  "graphql-iso-date": "^3.6.1",
  "graphql-resolvers": "^0.4.2",
  "graphql-tools": "^4.0.7",
  "jwks-rsa": "^1.8.0",
  "nconf": "^0.10.0",
  "nconf-yaml": "^1.0.2",
  "npm-check": "^5.9.2",
  "runtypes": "^4.2.0",
  "runtypes-filter": ">=0.1.1 <2.0.0"
 },
 "devDependencies": {
  "@babel/cli": "^7.8.4",
  "@babel/core": "^7.9.0",
  "@babel/node": "^7.8.7",
  "@babel/plugin-proposal-class-properties": "^7.8.3",
  "@babel/preset-env": "^7.9.5",
  "@babel/preset-typescript": "^7.9.0",
  "@graphql-codegen/add": "^1.8.3",
  "@graphql-codegen/cli": "^1.8.3",
  "@graphql-codegen/core": "^1.8.3",
  "@graphql-codegen/schema-ast": "^1.8.3",
  "@graphql-codegen/typescript": "^1.8.3",
  "@graphql-codegen/typescript-resolvers": "^1.8.3",
  "@types/bluebird": "^3.5.30",
  "@types/express": "^4.17.4",
  "@types/glob": "^7.1.1",
  "@types/graphql-fields": "^1.3.2",
  "@types/graphql-iso-date": "^3.3.3",
  "@types/graphql-resolvers": "^0.2.2",
  "@types/hapi__accept": "^3.2.0",
  "@types/jest": "^25.2.1",
  "@types/node": "^12.12.21",
  "@types/node-fetch": "^2.5.7",
  "@typescript-eslint/parser": "^4.4.1",
  "apollo-server-testing": "^2.12.0",
  "eslint": "^6.8.0",
  "eslint-config-prettier": "^6.11.0",
  "eslint-config-react-app": "^5.2.1",
  "eslint-plugin-import": "^2.18.2",
  "eslint-plugin-jest": "^22.21.0",
  "eslint-plugin-prettier": "^3.1.4",
  "graphql-tag": "^2.10.3",
  "husky": "^4.2.5",
  "jest": "^25.4.0",
  "jest-junit": "^10.0.0",
  "lint-staged": "^10.1.7",
  "nodemon": "^2.0.3",
  "prettier": "^1.18.2",
  "typescript": "^3.8.3"
 },
 "husky": {
  "hooks": {
   "pre-commit": "tsc --noEmit && lint-staged"
  }
 },
 "types": "dist/index.d.ts",
 "prettier": {
  "printWidth": 100,
  "singleQuote": true,
  "useTabs": true,
  "trailingComma": "all"
 },
 "eslintConfig": {
  "extends": [
   "react-app",
   "plugin:prettier/recommended"
  ],
  "plugins": [
   "prettier"
  ],
  "settings": {
   "react": {
    "version": "latest"
   }
  },
  "overrides": [
   {
    "files": [
     "**/*.js"
    ],
    "rules": {
     "@typescript-eslint/explicit-function-return-type": 0
    }
   }
  ]
 },
 "jest": {
  "testEnvironment": "node",
  "collectCoverageFrom": [
   "<rootDir>/src/**/*.{js,ts}"
  ],
  "coverageDirectory": "<rootDir>/reports/coverage",
  "coverageThreshold": {
   "global": {
    "statements": 60,
    "branches": 40,
    "functions": 50,
    "lines": 60
   }
  },
  "coverageReporters": [
   "html",
   "text",
   "text-summary"
  ],
  "reporters": [
   "default",
   "jest-junit"
  ],
  "setupFiles": [
   "<rootDir>/jest.setup.js"
  ]
 },
 "jest-junit": {
  "outputDirectory": "reports/jest",
  "outputName": "results.xml"
 }
}
